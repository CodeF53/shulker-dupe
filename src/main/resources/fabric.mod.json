{
  "schemaVersion": 1,
  "id": "shulker-tool",
  "version": "${version}",

  "name": "Shulker Tool",
  "description": "A mod that makes it easier to manage items with shulkers.",
  "authors": [
    "Coderx_Gamer",
    "Ran"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/shulker-tool/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.shulker.tool.MainClient"
    ]
  },
  "mixins": [
    "shulker-tool.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=16"
  },
  "suggests": {
    "another-mod": "*"
  }
}
